<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.DishDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dish_imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/add_image_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:layout_gravity="end|bottom"
                app:srcCompat="@drawable/ic_baseline_add_photo_24" />
        </FrameLayout>

        <TextView
            android:id="@+id/dish_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dish Name"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/category_and_type_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Â· Dessert"
            android:textSize="18sp"
            android:textColor="@color/primary_color"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/ingredients_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flour, baking soda, eggs."
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directions to cook"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/directions_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mix and put in the oven, cool then serve."
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginHorizontal="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooking time"
            android:textSize="20sp"
            android:textColor="@color/secondary_color"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/cooking_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 minutes"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginHorizontal="16dp" />


    </LinearLayout>

</ScrollView>